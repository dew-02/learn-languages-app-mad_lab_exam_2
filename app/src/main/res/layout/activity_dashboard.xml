<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#E3F2FD"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dashboard Title with custom style -->
    <TextView
        android:text="@string/dashboard_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Top Image for creativity -->
    <ImageView
        android:src="@drawable/dashboard_icon"
        android:contentDescription="@string/dashboard_image_desc"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp" />


    <!-- Buttons with background colors, rounded corners, and consistent height -->
    <Button
        android:id="@+id/btnBasicWords"
        android:text="@string/btn_basic_words"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnPhrases"
        android:text="@string/btn_phrases"
        android:textSize="18sp"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnNumbers"
        android:text="@string/btn_numbers"
        android:textSize="18sp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnQuiz"
        android:text="@string/btn_quiz"
        android:textSize="18sp"
        android:backgroundTint="#9C27B0"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnProgress"
        android:text="@string/btn_progress"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnBackDashboard"
        android:text="Back"
        android:backgroundTint="#BBDEFB"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="10dp" />

</LinearLayout>
